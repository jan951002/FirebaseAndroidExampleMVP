<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.uploadphoto.UploadPhotoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_pick_from_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_pick_from_gallery" />

        <Button
            android:id="@+id/btn_pick_from_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/action_pick_from_camera" />

        <ImageView
            android:id="@+id/pick_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</FrameLayout>